<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.FileDAO">
	<insert id="insertFile" parameterType="fvo">
		insert into attached_file
		(uuid, save_dir, file_name, file_type, bno, file_size)
		values (#{uuid}, #{saveDir}, #{fileName}, #{fileType}, #{bno}, #{fileSize})
	</insert>
	<select id="selectListFile" parameterType="long" resultType="fvo">
		select * from attached_file where bno = #{bno}
	</select>
	<delete id="deleteFile" parameterType="string">
		delete from attached_file where uuid = #{uuid}
	</delete>
	<delete id="deleteAllFile" parameterType="long">
		delete from attached_file where bno = #{bno}
	</delete>
</mapper>